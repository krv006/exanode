/etc/nginx/sites-available/exanode

server {
    listen       8011;
    server_name  exanode.coffeecrm.uz;

    location = /favicon.ico { access_log off; log_not_found off; }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/exanode/exanode.sock;
    }

}




/etc/systemd/system/exanodee.service


[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/exanode
ExecStart=/var/www/exanode/.venv/bin/gunicorn --workers 1 --bind unix:/var/www/exanode/exanode.sock root.wsgi:application

[Install]
WantedBy=multi-user.target



systemctl start exanodee.service
systemctl enable exanodee.service
systemctl status exanodee.service



/etc/nginx/sites-available/
ln -s /etc/nginx/sites-available/exanode /etc/nginx/sites-enabled/

/etc/nginx/sites-enabled/




nginx -t


certbot --nginx -d imtihon.lms-impulse.uz
certbot --nginx -d qabul.lms-impulse.uz





